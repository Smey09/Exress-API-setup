{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "pretty": true,
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./src/test/*"]
    }
  },
  "include": ["src/**/*", "ecosystem.config.js", "tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
